@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)<h3>

@if (@Model.Clients.Count == 0)
{
  <h4>No clients have been added to this stylist yet!</h4>
} 
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Items", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit this stylist's name/details", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete this stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>